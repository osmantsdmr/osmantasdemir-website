---
// Navbar Component
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-[#37353E] border-b border-[#57564F]/30">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo -->
      <a href="/" class="text-xl font-bold text-[#D3DAD9]">
        Osman<span class="text-[#57564F]">.</span>
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center gap-8">
        <a href="/" class="text-[#D3DAD9]/80 hover:text-[#D3DAD9] transition-colors">Ana Sayfa</a>
        <a href="/hakkimda" class="text-[#D3DAD9]/80 hover:text-[#D3DAD9] transition-colors">Hakkımda</a>
        <a href="/projeler" class="text-[#D3DAD9]/80 hover:text-[#D3DAD9] transition-colors">Projeler</a>
        <a href="/hizmetler" class="text-[#D3DAD9]/80 hover:text-[#D3DAD9] transition-colors">Hizmetler</a>
        <a href="/blog" class="text-[#D3DAD9]/80 hover:text-[#D3DAD9] transition-colors">Blog</a>
        <a href="/iletisim" class="text-[#D3DAD9]/80 hover:text-[#D3DAD9] transition-colors">İletişim</a>
      </div>

      <!-- Language Switcher (Desktop) -->
      <div class="hidden md:flex items-center gap-2">
        <span class="px-3 py-1 text-sm bg-[#57564F] text-[#D3DAD9] rounded">TR</span>
        <span class="px-3 py-1 text-sm text-[#D3DAD9]/60">EN</span>
      </div>

      <!-- Mobile Menu Button -->
      <button type="button" id="mobile-menu-button" class="md:hidden text-[#D3DAD9] p-2 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

    </div>
  </div>
</nav>

<!-- Mobile Menu (Ayrı, Nav dışında) -->
<div id="mobile-menu" class="fixed inset-0 z-[100] hidden">
  <!-- Arka plan overlay -->
  <div class="absolute inset-0 bg-[#37353E]"></div>
  
  <!-- Menü içeriği -->
  <div class="relative z-10 flex flex-col h-full">
    <!-- Üst bar -->
    <div class="flex items-center justify-between h-16 px-4 border-b border-[#57564F]/30">
      <a href="/" class="text-xl font-bold text-[#D3DAD9]">
        Osman<span class="text-[#57564F]">.</span>
      </a>
      <button type="button" id="close-menu-button" class="text-[#D3DAD9] p-2 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Linkler -->
    <div class="flex-1 flex flex-col items-center justify-center gap-8">
      <a href="/" class="text-2xl text-[#D3DAD9] hover:text-[#57564F]">Ana Sayfa</a>
      <a href="/hakkimda" class="text-2xl text-[#D3DAD9] hover:text-[#57564F]">Hakkımda</a>
      <a href="/projeler" class="text-2xl text-[#D3DAD9] hover:text-[#57564F]">Projeler</a>
      <a href="/hizmetler" class="text-2xl text-[#D3DAD9] hover:text-[#57564F]">Hizmetler</a>
      <a href="/blog" class="text-2xl text-[#D3DAD9] hover:text-[#57564F]">Blog</a>
      <a href="/iletisim" class="text-2xl text-[#D3DAD9] hover:text-[#57564F]">İletişim</a>
      
      <!-- Dil seçici -->
      <div class="flex items-center gap-4 mt-8">
        <span class="px-4 py-2 bg-[#57564F] text-[#D3DAD9] rounded">TR</span>
        <span class="px-4 py-2 text-[#D3DAD9]/60">EN</span>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  (function() {
    var menuButton = document.getElementById('mobile-menu-button');
    var closeButton = document.getElementById('close-menu-button');
    var mobileMenu = document.getElementById('mobile-menu');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', function() {
        mobileMenu.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      });
    }

    if (closeButton && mobileMenu) {
      closeButton.addEventListener('click', function() {
        mobileMenu.classList.add('hidden');
        document.body.style.overflow = '';
      });
    }

    // Linklere tıklayınca menüyü kapat
    var links = mobileMenu ? mobileMenu.querySelectorAll('a') : [];
    links.forEach(function(link) {
      link.addEventListener('click', function() {
        mobileMenu.classList.add('hidden');
        document.body.style.overflow = '';
      });
    });
  })();
</script>