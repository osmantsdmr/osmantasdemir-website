---
// Navbar Component
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-[#37353E]/90 backdrop-blur-md border-b border-[#D3DAD9]/10">
  <div class="container mx-auto px-4 md:px-8">
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo / İsim -->
      <a href="/" class="text-xl font-bold text-[#D3DAD9] hover:text-white transition-colors">
        Osman<span class="text-[#8a8a7a]">.</span>
      </a>

      <!-- Desktop Menü -->
      <div class="hidden md:flex items-center gap-8">
        <a href="/" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors">
          Ana Sayfa
        </a>
        <a href="/hakkimda" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors">
          Hakkımda
        </a>
        <a href="/projeler" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors">
          Projeler
        </a>
        <a href="/hizmetler" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors">
          Hizmetler
        </a>
        <a href="/blog" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors">
          Blog
        </a>
        <a href="/iletisim" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors">
          İletişim
        </a>
      </div>

      <!-- Dil Seçimi + Mobil Menü Butonu -->
      <div class="flex items-center gap-4">
        <!-- Dil Seçimi -->
        <div class="flex items-center gap-1 text-sm">
          <button class="px-2 py-1 text-[#D3DAD9] bg-[#57564F] rounded">TR</button>
          <button class="px-2 py-1 text-[#D3DAD9]/50 hover:text-[#D3DAD9] transition-colors">EN</button>
        </div>

        <!-- Mobil Menü Butonu -->
        <button id="mobile-menu-btn" class="md:hidden text-[#D3DAD9] p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobil Menü (Gizli) -->
  <div id="mobile-menu" class="hidden md:hidden bg-[#37353E] border-t border-[#D3DAD9]/10">
    <div class="container mx-auto px-4 py-4 flex flex-col gap-4">
      <a href="/" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors py-2">
        Ana Sayfa
      </a>
      <a href="#hakkimda" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors py-2">
        Hakkımda
      </a>
      <a href="/projeler" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors py-2">
        Projeler
      </a>
      <a href="/hizmetler" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors py-2">
        Hizmetler
      </a>
      <a href="/blog" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors py-2">
        Blog
      </a>
      <a href="#iletisim" class="text-[#D3DAD9]/70 hover:text-[#D3DAD9] transition-colors py-2">
        İletişim
      </a>
    </div>
  </div>
</nav>

<!-- Mobil Menü JavaScript -->
<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>