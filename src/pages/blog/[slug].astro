---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogYazilari = await getCollection('blog');
  return blogYazilari.map((yazi) => ({
    params: { slug: yazi.data.slug },
    props: { yazi },
  }));
}

const { yazi } = Astro.props;
const { Content } = await yazi.render();
---

<Layout title={`${yazi.data.baslik} | Osman Taşdemir`}>
  <Navbar />
  
  <main style="padding-top: 80px; background-color: #37353E; min-height: 100vh;">
    <article style="max-width: 750px; margin: 0 auto; padding: 40px 20px;">
      
      <!-- Header -->
      <header style="margin-bottom: 40px; text-align: center;">
        <time style="font-size: 14px; color: #57564F; margin-bottom: 12px; display: block;">
          {new Date(yazi.data.tarih).toLocaleDateString('tr-TR', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        <h1 style="font-size: 36px; font-weight: bold; color: #D3DAD9; margin-bottom: 16px; line-height: 1.3;">
          {yazi.data.baslik}
        </h1>
        <p style="font-size: 18px; color: #D3DAD9; opacity: 0.7;">
          {yazi.data.ozet}
        </p>
      </header>

      <!-- Content -->
      <div class="prose">
        <Content />
      </div>

      <!-- Back Button -->
      <div style="margin-top: 60px; padding-top: 30px; border-top: 1px solid #44444E;">
        <a href="/blog" style="display: inline-flex; align-items: center; gap: 8px; color: #D3DAD9; text-decoration: none; padding: 12px 24px; background: #57564F; border-radius: 8px; transition: background 0.3s;">
          ← Tüm Yazılar
        </a>
      </div>

    </article>
  </main>
</Layout>

<style>
  .prose {
    color: #D3DAD9;
    font-size: 17px;
    line-height: 1.8;
  }
  .prose :global(h2) {
    font-size: 24px;
    font-weight: bold;
    margin-top: 40px;
    margin-bottom: 16px;
  }
  .prose :global(h3) {
    font-size: 20px;
    font-weight: bold;
    margin-top: 32px;
    margin-bottom: 12px;
  }
  .prose :global(p) {
    margin-bottom: 20px;
    opacity: 0.9;
  }
  .prose :global(ul), .prose :global(ol) {
    margin-bottom: 20px;
    padding-left: 24px;
  }
  .prose :global(li) {
    margin-bottom: 8px;
  }
  .prose :global(a) {
    color: #57564F;
    text-decoration: underline;
  }
  .prose :global(code) {
    background: #44444E;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 15px;
  }
  .prose :global(pre) {
    background: #1a1a1a;
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 20px;
  }
  .prose :global(blockquote) {
    border-left: 3px solid #57564F;
    padding-left: 20px;
    margin: 20px 0;
    font-style: italic;
    opacity: 0.8;
  }
</style>